<?xml version="1.0" encoding="utf-8" ?>
<page:CustomTabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             xmlns:page="clr-namespace:SoccerBetting.Controls"
             mc:Ignorable="d"
             xmlns:views="clr-namespace:SoccerBetting.Views"
             x:Class="SoccerBetting.Views.MasterPage"       
             android:TabbedPage.ToolbarPlacement="Bottom"  
             android:TabbedPage.BarItemColor="Gray"
             android:TabbedPage.BarSelectedItemColor="#0076fc" 
             BackgroundColor="#fafafa"   
             FontFamily="Montserrat-Regular"
             NavigationPage.HasNavigationBar="False"                           
             CurrentPageChanged="BottomBarPage_CurrentPageChanged">
    <page:CustomTabbedPage.Children>
        <views:Home Title="Home" IconImageSource="ic_ball.png" />
        <views:History Title="History" IconImageSource="ic_latest.png" />
        <views:Setting Title="Account" IconImageSource="ic_user.png" />
    </page:CustomTabbedPage.Children>
</page:CustomTabbedPage>